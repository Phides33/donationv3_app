<% case @profile.step when 1 %>
  <%= simple_form_for @profile do |d| %>
    <%= d.input :cause,
          label: "A quelle cause donneriez-vous (plus) si vous le pouviez ?",
          collection: Profile.causes, as: :radio_buttons %>
    <%= d.button :submit, "Confirmer et passer à la question suivante" %>
  <% end %>
<% when 2 %>
  <%= simple_form_for @profile do |d| %>
    <%= d.input :own_emotion,
          label: "Que ressentiriez-vous en donnant plus ?",
          collection: Profile.own_emotions, as: :radio_buttons %>
    <%= d.button :submit, "Confirmer et passer à la question suivante" %>
  <% end %>
<% when 3 %>
  <%= simple_form_for @profile do |d| %>
    <%= d.input :full_name, label: "Comment vous appelez-vous ?" %>
    <%= d.button :submit, "Confirmer et terminer" %>
  <% end %>
<% end %>
